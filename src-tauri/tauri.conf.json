{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bitcoin-widget",
  "version": "0.1.0",
  "identifier": "no.brainbox.bitcoin-widget",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "bitcoin-widget",
        "width": 300,
        "height": 60,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "center": true,
        "fullscreen": false,
        "skipTaskbar": true,
        "hiddenTitle": true
        
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
